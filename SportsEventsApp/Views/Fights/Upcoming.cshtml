@model SportsEventsApp.Models.PaginatedListViewModel<SportsEventsApp.Models.FightViewModel>

<h1>Upcoming Fights</h1>

<div class="fights">
    @foreach (var fight in Model.Items)
    {
        <div class="fight-card">
            <img src="@fight.ImageUrl" alt="@fight.Title" class="img-thumbnail" />
            <h2>@fight.Title</h2>
            <p>@fight.Description</p>
            <p>@fight.DateOfTheFight.ToShortDateString()</p>
            <a asp-action="Details" asp-route-id="@fight.Id" class="btn btn-primary">View Details</a>
        </div>
    }
</div>

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a asp-action="Upcoming" asp-route-page="@(Model.CurrentPage - 1)" class="btn btn-secondary">Previous</a>
    }
    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-action="Upcoming" asp-route-page="@(Model.CurrentPage + 1)" class="btn btn-secondary">Next</a>
    }
</div>
