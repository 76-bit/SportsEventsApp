@model SportsEventsApp.Models.PaginatedListViewModel<SportsEventsApp.Models.FightViewModel>

<h1>My Favorites</h1>

<div class="fights">
    @foreach (var fight in Model.Items)
    {
        <div class="fight-card">
            <img src="@fight.ImageUrl" alt="@fight.Title" class="img-fluid" />
            <h2>@fight.Title</h2>
            <p>@fight.Description</p>
            <p>Date: @fight.DateOfTheFight.ToShortDateString()</p>
            <div class="card-actions">
                <!-- see details button -->
                <a asp-action="Details" asp-route-id="@fight.Id" class="btn btn-primary">See Details</a>

                <!-- remove from favorites button -->
                <form asp-action="RemoveFromFavorites" asp-route-id="@fight.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Remove from Favorites</button>
                </form>
            </div>
        </div>
    }
</div>

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a asp-action="Favorites" asp-route-page="@(Model.CurrentPage - 1)" class="btn btn-secondary">Previous</a>
    }
    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-action="Favorites" asp-route-page="@(Model.CurrentPage + 1)" class="btn btn-secondary">Next</a>
    }
</div>
