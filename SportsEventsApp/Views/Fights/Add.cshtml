@model SportsEventsApp.Models.FightViewModel

@{
    ViewData["Title"] = "Add Fight";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfTheFight" class="form-label"></label>
        <input asp-for="DateOfTheFight" type="date" class="form-control" />
        <span asp-validation-for="DateOfTheFight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YouTubeUrl" class="form-label"></label>
        <input asp-for="YouTubeUrl" class="form-control" />
        <span asp-validation-for="YouTubeUrl" class="text-danger"></span>
    </div>

    <!-- Multi-Select Checkboxes for Fighters -->
    <div class="form-group">
        <label>Select Fighters (Choose exactly 2)</label>
        @if (ViewBag.Fighters != null && (ViewBag.Fighters as List<SelectListItem>)!.Any())
        {
            <div class="checkbox-list">
                @foreach (var fighter in ViewBag.Fighters as List<SelectListItem>)
                {
                    <div class="form-check">
                        <input type="checkbox" name="SelectedFighters" value="@fighter.Value" class="form-check-input" id="fighter-@fighter.Value" />
                        <label class="form-check-label" for="fighter-@fighter.Value">@fighter.Text</label>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-danger">No fighters available. Please add fighters first.</p>
        }
    </div>

    <button type="submit" class="btn btn-primary">Add Fight</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
